<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroAlumnos"
    android:background="@color/color_morado_background_inicio">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:background="@color/LightCyan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_regalu_img"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingTop="30dp"
                android:src="@drawable/login_sisteval" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="@string/registro_alumnos"
                android:textColor="?android:attr/textColorPrimaryNoDisable"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txt_matricula_REG_ALU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:background="@color/color_blanco"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/matricula"
                android:inputType="text"
                android:text="" />

            <EditText
                android:id="@+id/txt_nombre_REG_ALU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_blanco"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/nombre_docente"
                android:inputType="text|textCapWords"
                android:text="" />

            <EditText
                android:id="@+id/txt_apellidos_REG_ALU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_blanco"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/apellidos_docente"
                android:inputType="text|textCapWords"
                android:text="" />

            <EditText
                android:id="@+id/txt_edad_REG_ALU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_blanco"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/edad"
                android:inputType="number"
                android:text="" />

            <EditText
                android:id="@+id/txt_serial_REG_ALU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_blanco"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/serial"
                android:inputType="text"
                android:text="" />

            <Button
                android:id="@+id/btt_registrar_REG_ALU"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="15dp"
                android:background="@color/color_verde_1"
                android:text="@string/registrar"
                android:textColor="@color/color_blanco" />

            <Button
                android:id="@+id/btt_lista_alumnos_REG_ALU"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="15dp"
                android:background="@color/color_verde_1"
                android:text="@string/lista_alumnos"
                android:textColor="@color/color_blanco" />

            <Button
                android:id="@+id/btt_menu_principal_REG_ALU"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="15dp"
                android:background="@color/color_azul_primary"
                android:text="@string/menu_principal"
                android:textColor="@color/color_blanco" />
        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>