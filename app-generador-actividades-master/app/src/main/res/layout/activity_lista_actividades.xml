<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaActividades">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lista_actividades"
                android:textSize="18dp"
                android:background="@color/color_azul_titulo"
                android:textColor="@color/color_blanco"
                android:padding="10dp"
                android:gravity="center" />

            <WebView
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:id="@+id/web_view"></WebView>

            <Button
                android:layout_gravity="center"
                android:text="Salir"
                android:layout_width="150dp"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:textColor="@color/color_blanco"
                android:background="@color/color_azul_primary"
                android:id="@+id/btt_salir_LIS_ACT"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>