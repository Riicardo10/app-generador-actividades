<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaDocentes">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lista_docentes"
            android:layout_gravity="center"
            android:background="@color/color_azul_titulo"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/color_blanco"
            android:textSize="18dp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/lista_docentes_LIS_DOC"
            android:layout_marginBottom="20dp"
            android:fontFamily="serif-monospace"> </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:text="Eliminar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/color_blanco"
                android:background="@color/color_rojo_1"
                android:layout_marginRight="30dp"
                android:id="@+id/btt_eliminar_docente_LIS_DOC"/>

            <Button
                android:text="Actualizar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/color_blanco"
                android:background="@color/color_verde_1"
                android:id="@+id/btt_actualizar_docente_LIS_DOC"/>


        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>